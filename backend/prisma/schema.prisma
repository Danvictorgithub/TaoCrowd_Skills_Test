generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

enum Status {
  failed
  success
  upcoming
}

model Project {
 id    String                           @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  status      Status
  image       String
  video       String
  article     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
